{
  "name": "mimir-monorepo",
  "private": true,
  "description": "Mimir - Smart TV Control Hub",
  "scripts": {
    "dev": "concurrently -n \"SERVER,APP\" -c \"blue,magenta\" \"pnpm dev:server\" \"pnpm dev:app\"",
    "dev:server": "pnpm --filter mimir-server dev",
    "build:server": "pnpm --filter mimir-server build",
    "dev:app": "pnpm --filter @mimir/app start",
    "build:app": "pnpm --filter @mimir/app build",
    "lint": "pnpm -r lint",
    "format": "pnpm -r format",
    "release": "semantic-release",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.18.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "semantic-release": "^25.0.2",
    "typescript-eslint": "^8.51.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css,html}": [
      "prettier --write"
    ]
  }
}
